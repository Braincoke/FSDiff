<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="gui.wizard.hash.RecapController" stylesheets="@HashWizard.css">
    <children>
        <BorderPane prefHeight="540.0" prefWidth="740.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <bottom>
                <HBox alignment="BOTTOM_RIGHT" prefHeight="50.0" prefWidth="200.0" spacing="10" BorderPane.alignment="CENTER">
                    <children>
                        <Button fx:id="nextButton" mnemonicParsing="false" onAction="#done" text="Done" />
                    </children>
                </HBox>
            </bottom>
            <top>
                <VBox alignment="TOP_CENTER" prefHeight="150.0" prefWidth="100.0" spacing="10.0" BorderPane.alignment="CENTER">
                    <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Hashed File System">
                            <font>
                                <Font size="48.0" />
                            </font>
                        </Text>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Recap of the hash generation" textAlignment="CENTER" wrappingWidth="400.0" />
                    </children>
                </VBox>
            </top>
            <center>
            <ScrollPane focusTraversable="false" pannable="true" prefViewportHeight="360.0" prefViewportWidth="500.0" vbarPolicy="AS_NEEDED" hbarPolicy="NEVER" fx:id="scrollPane">
               <content>
                   <VBox fx:id="infoViewList">
                       <padding>
                           <Insets left="0" right="0" bottom="10" top="10"/>
                       </padding>
                   </VBox>
               </content>
            </ScrollPane>
            </center>
        </BorderPane>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</AnchorPane>
